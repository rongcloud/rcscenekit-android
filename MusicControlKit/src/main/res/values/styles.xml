<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RCKitMusicPlayView">
        <attr name="line_color" format="color" />
        <attr name="line_number" format="integer" />
        <attr name="refresh_duration" format="integer" />
    </declare-styleable>

    <style name="RCKitMusicControlSeekbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:max">100</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:progressDrawable">@drawable/rckit_seekbar_volume_setting</item>
        <item name="android:thumb">@drawable/rckit_thumb_volume_setting</item>
    </style>

    <style name="RCKitMusicControlSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/rckit_color_primary</item>
        <item name="colorSwitchThumbNormal">#ebebeb</item>
        <item name="android:colorForeground">#ffffff</item>
    </style>
</resources>