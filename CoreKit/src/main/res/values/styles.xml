<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RCKitBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RCKitBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RCKitBottomSheetStyle</item>
    </style>

    <declare-styleable name="RCKitRealtimeBlurView">
        <attr name="rckit_realtimeBlurRadius" format="dimension" />
        <attr name="rckit_realtimeDownsampleFactor" format="float" />
        <attr name="rckit_realtimeOverlayColor" format="color" />

        <attr name="rckit_radius" format="dimension" />
        <attr name="rckit_left_top_radius" format="float" />
        <attr name="rckit_right_top_radius" format="float" />
        <attr name="rckit_right_bottom_radius" format="float" />
        <attr name="rckit_left_bottom_radius" format="float" />
    </declare-styleable>
</resources>